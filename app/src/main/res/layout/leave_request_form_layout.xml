<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyDarken4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/greyDarken4"
        android:orientation="vertical">
            
        <View
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorWhite"/>
            
        <TextView
            android:background="@color/colorGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="8dp"
            android:fontFamily="serif"
            android:text="PERIOD OF ABSENCE"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold" />
            
        <TextView
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/colorGreen"
            android:text="Please fill up all information below"
            android:textColor="@color/colorWhite"
            android:fontFamily="serif"
            android:textSize="16sp" />
                
        <View
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorLightGrey" />
            
        <GridLayout
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnOrderPreserved="true"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:rowCount="4">

            <TextView
                android:id="@+id/tvFromDateCovered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Date From: "
                android:textColor="@color/colorWhite"
                android:fontFamily="serif"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/etFromDateCovered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonborderred"
                android:padding="8dp"
                android:text="Select Date"
                android:textColor="@color/colorWhite"
                android:fontFamily="serif"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvToDateCovered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5dp"
                android:text="Date To: "
                android:textColor="@color/colorWhite"
                android:fontFamily="serif"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/etToDateCovered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/buttonborderred"
                android:padding="8dp"
                android:text="Select Date"
                android:textColor="@color/colorWhite"
                android:fontFamily="serif"
                android:textSize="20sp" />

            <TextView
                android:fontFamily="serif"
                android:id="@+id/tvDaysCovered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Day(s):"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWhite"
                android:hint="      0      "
                android:inputType="numberDecimal"
                android:maxLength="3"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorLightGrey"
                android:fontFamily="serif"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvTotalHoursCovered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Total Hours: "
                android:fontFamily="serif"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etTotalHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWhite"
                android:hint="     24     "
                android:inputType="numberDecimal"
                android:maxLength="4"
                android:fontFamily="serif"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorLightGrey"
                android:textSize="20sp" />
        </GridLayout>
