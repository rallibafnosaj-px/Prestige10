        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorWhite"/>

        <TextView
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Please input reason for absence"
            android:textColor="@color/colorWhite"
            android:background="@color/colorGreen"
            android:padding="8dp"
            android:fontFamily="serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorWhite"/>
            
        <EditText
            android:background="@color/colorLightGrey"
            android:backgroundTint="@color/colorWhite"
            android:lines="7"
            android:gravity="top|left"
            android:hint="Please input reason here . . ."
            android:textColorHint="@color/greyDarken4"
            android:padding="10dp"
            android:fontFamily="serif"
            android:id="@+id/etReasonOfAbsence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/greyDarken4"
            android:textSize="16sp" />
        
    </LinearLayout>

    <Button
        android:layout_gravity="bottom"
        android:textSize="20sp"
        android:fontFamily="serif"
        android:id="@+id/btnSubmitRequestOfAbsence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonborderred"
        android:text="@string/submit_request"
        android:textColor="@color/colorWhite" />

</android.support.design.widget.CoordinatorLayout>