<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyDarken4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greyDarken4"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite">
            <!--<GridLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/gridLayout">-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:textColor="@color/colorWhite">

                <View
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/mdtp_white"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorGreen"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Please Click the Camera Image to take a Selfie."
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/mdtp_white"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="32dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:textColor="@color/colorWhite">

                    <ImageView
                        android:id="@+id/imgViewCapture"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_defaulticon"
                        android:scaleType="centerCrop"
                        android:src="@drawable/defaultphoto" />

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:alignmentMode="alignMargins"
                        android:columnCount="2"
                        android:columnOrderPreserved="true"
                        android:rowCount="4">

                        <TextView
                            android:id="@+id/lblTimeIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="serif"
                            android:text="Time: "
                            android:textColor="@color/colorWhite"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtTimein"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:paddingLeft="5dp"
                            android:text="No Time In / Out"
                            android:textColor="@color/colorWhite"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:text="Date:"
                            android:textColor="@color/colorWhite"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_marginTop="8dp"
                            android:id="@+id/txtDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="serif"
                            android:paddingLeft="5dp"
                            android:text="No Date"
                            android:textColor="@color/colorWhite"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="serif"
                            android:text="Store: "
                            android:textColor="@color/colorWhite"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:backgroundTint="@color/colorWhite"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:text="Other Store: "
                            android:textColor="@color/colorWhite"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:visibility="gone" />

                        <EditText
                            android:layout_marginTop="8dp"
                            android:id="@+id/etOtherStore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:textColor="@color/colorWhite"
                            android:textSize="20sp"
                            android:visibility="gone" />

                        <TextView
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:text="Address:"
                            android:textColor="@color/colorWhite"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtLocation"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:paddingStart="5dp"
                            android:text="Unknown"
                            android:textColor="@color/colorWhite"
                            android:textSize="20sp"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold" />


                    </GridLayout>


                </HorizontalScrollView>

                <TextView
                    android:id="@+id/txtLatLong"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:paddingStart="5dp"
                    android:text="Unknown"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="32dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:fontFamily="serif"
                        android:id="@+id/btnCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimaryDarkReg"
                        android:text="Cancel"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:visibility="invisible" />

                    <ImageButton
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:id="@+id/btnCamera"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:background="@android:color/transparent"
                        android:baselineAlignBottom="true"
                        android:src="@drawable/camera"
                        android:textColor="@color/colorWhite" />

                    <Button
                        android:fontFamily="serif"
                        android:id="@+id/btnSave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/btnCamera"
                        android:background="@color/colorGreen"
                        android:text="Save"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:visibility="invisible" />


                </LinearLayout>
            </LinearLayout>
            <!--                    </GridLayout>-->
        </ScrollView>
    </LinearLayout>

</ScrollView>