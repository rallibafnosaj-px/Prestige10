<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingTop="4dp"
    android:background="@color/greyDarken4"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:visibility="gone"
        android:id="@+id/imgAnnouncement"
        android:layout_width="match_parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_height="250dp"
        android:backgroundTint="@color/colorLightGrey"
        android:layout_marginTop="50dp"
        android:background="@drawable/emptyannouncement"
        />

    <TextView
        android:visibility="gone"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/imgAnnouncement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Current Announcement"
        android:gravity="center"
        android:id="@+id/tvAnnouncement"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_for_announcement"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>