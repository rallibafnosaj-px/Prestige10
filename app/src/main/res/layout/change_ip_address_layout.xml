<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyDarken4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/greyDarken4"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="1dp"
            android:background="@color/colorWhite" />

        <TextView
            android:id="@+id/tvCurrentWeekNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorGreen"
            android:fontFamily="serif"
            android:gravity="center"
            android:padding="16dp"
            android:text="CHOOSE IP CONNECTION"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorWhite" />

        <TextView
            android:id="@+id/tvCurrentConnection"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/greyDarken3"
            android:fontFamily="serif"
            android:gravity="center"
            android:padding="16dp"
            android:text="No Connection"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnLocalIP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvInventoryStatus"
                android:layout_marginTop="8dp"
                android:background="@drawable/buttonborderred"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="local ip"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnPublicIP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnLocalIP"
                android:layout_marginTop="8dp"
                android:background="@drawable/buttonborderred"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="public ip"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />


        </RelativeLayout>

    </LinearLayout>
</ScrollView>